<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
       <act_window  id="paciente_menu_action"  
      	name="Pacientes"  
      	res_model="paciente.paciente"
      	view_mode="tree,form"  />

		<act_window  id="orden_menu_action"  
      	name="Orden"  
      	res_model="paciente.orden"
      	view_mode="tree,form"  />
		
		<act_window  id="empleado_menu_action"  
      	name="Empleado"  
      	res_model="empleado.laboratorio"
      	view_mode="tree,form"  />

		<act_window  id="examen_menu_action"  
      	name="Examen"  
      	res_model="paciente.examen"
      	view_mode="tree,form"  />
		
    	<menuitem id="laboratorio_menu" name="Laboratorio"  />
		<menuitem id="paciente_menu" parent="laboratorio_menu" name="Paciente" action="paciente_menu_action"/>
		<menuitem id="ordenes_menu" parent="laboratorio_menu" name="Orden" action="orden_menu_action"/>
		<menuitem id="empleados_menu" parent="laboratorio_menu" name="Empleado" action="empleado_menu_action"/>
		<menuitem id="examenes_menu" parent="laboratorio_menu" name="Examen" action="examen_menu_action"/>
		
		
		<!--Vista del conjunto Pacientes-->
		<record id="pacientes_tree_view" model="ir.ui.view">
			<field name="name">Arbol de Pacientes</field>
			<field name="model">paciente.paciente</field>
			<field name="arch" type="xml">
				<tree string="Pacientes">
					<field name="pnombrePaciente"/>
					<field name="papellidoPaciente"/>
					<field name="edad"/>
					<field name="genero"/>
					<field name="tipodeSangre"/>
					<field name="nacionalidadPaciente"/>
				</tree>
			</field>
		</record>

		<!--Vista del Dato Paciente-->
		<record id="paciente_free_view" model="ir.ui.view">
			<field name="name">Formato Paciente</field>
			<field name="model">paciente.paciente</field>
			<field name="arch" type="xml">
				<form string="Paciente">
					<sheet>
						<field name="foto" widget="image" class="oe_left oe_avatar" />
						<div class="oe_title">
							<h2>
								<field name="pnombrePaciente"/>
								<field name="snombrePaciente"/>
								<field name="papellidoPaciente"/>
								<field name="sapellidoPaciente"/>
							</h2>
						</div>                    
						<group>
							<group>
								<field name="fechaNacimiento"/>
								<field name="genero"/>
							</group>
							<group>
								<field name="edad"/>
								<field name="tipodeSangre"/>
								<field name="nacionalidadPaciente"/>
							</group>
							<notebook>
                            <page string="Direccion">
                                <field name="direccionPaciente"/>
                            </page>
                        </notebook>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- paciente.paciente search view -->
		<record id="paciente_view_search" model="ir.ui.view">
			<field name="name">paciente.paciente.view.search</field>
			<field name="model">paciente.paciente</field>
			<field name="arch" type="xml">
				<search string="Busqueda de Pacientes">
					<field name="pnombrePaciente"/>
					<field name="papellidoPaciente"/>
					<field name="tipodeSangre"/>
				</search>
			</field>
		</record>

		<!--Vista del conjunto Ordenes-->
		<record id="ordenes_tree_view" model="ir.ui.view">
			<field name="name">Arbol de Ordenes</field>
			<field name="model">paciente.orden</field>
			<field name="arch" type="xml">
				<tree string="Ordenes">
					<field name="fechaIngreso"/>
					<field name="fechaImpresion"/>
					<field name="examenesOrden"/>
					<field name="pacienteOrden"/>
				</tree>
			</field>
		</record>

		<!--Vista del Dato Ordenes-->
		<record id="orden_free_view" model="ir.ui.view">
			<field name="name">Formato Orden</field>
			<field name="model">paciente.orden</field>
			<field name="arch" type="xml">
				<form string="Orden">
					<sheet>
						<div class="oe_title">
							<h2>
								<field name="pacienteOrden"/>
							</h2>
						</div>                    
						<group>
							<group>
								<field name="fechaIngreso"/>
								<field name="fechaImpresion"/>
								<field name="examenesOrden"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- paciente.orden search view -->
		<record id="orden_view_search" model="ir.ui.view">
			<field name="name">paciente.orden.view.search</field>
			<field name="model">paciente.orden</field>
			<field name="arch" type="xml">
				<search string="Busqueda de Ordenes">
					<field name="pacienteOrden"/>
					<field name="fechaIngreso"/>
					<field name="fechaImpresion"/>
					<field name="examenesOrden"/>
				</search>
			</field>
		</record>

		<!--Vista del conjunto Examenes-->
		<record id="examenes_tree_view" model="ir.ui.view">
			<field name="name">Arbol de Examenes</field>
			<field name="model">paciente.examen</field>
			<field name="arch" type="xml">
				<tree string="Examenes">
					<field name="nombre"/>
					<field name="resultado"/>
					<field name="validacionExamen"/>
					<field name="realizadoPor"/>
				</tree>
			</field>
		</record>

		<!--Vista del Dato Examen-->
		<record id="examen_free_view" model="ir.ui.view">
			<field name="name">Formato Examen</field>
			<field name="model">paciente.examen</field>
			<field name="arch" type="xml">
				<form string="Examen">
					<sheet>
						<div class="oe_title">
							<h2>
								<field name="nombre"/>
							</h2>
						</div>                    
						<group>
							<group>
								<field name="resultado"/>
							</group>
							<group>
								<field name="validacionExamen"/>
								<field name="realizadoPor"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- paciente.examen search view -->
		<record id="examen_view_search" model="ir.ui.view">
			<field name="name">paciente.examen.view.search</field>
			<field name="model">paciente.examen</field>
			<field name="arch" type="xml">
				<search string="Busqueda de Examenes">
					<field name="nombre"/>
					<field name="resultado"/>
					<field name="realizadoPor"/>
				</search>
			</field>
		</record>

		<!--Vista del conjunto Empleados-->
		<record id="examenes_tree_view" model="ir.ui.view">
			<field name="name">Arbol de Empleados</field>
			<field name="model">empleado.laboratorio</field>
			<field name="arch" type="xml">
				<tree string="Examenes">
					<field name="nombreCompleto"/>
					<field name="cargo"/>
				</tree>
			</field>
		</record>

		<!--Vista del Dato Examen-->
		<record id="empleado_free_view" model="ir.ui.view">
			<field name="name">Formato Empleado</field>
			<field name="model">empleado.laboratorio</field>
			<field name="arch" type="xml">
				<form string="Empleado">
					<sheet>            
						<h1>
							<group>
								<field name="nombreCompleto"/>
								<field name="cargo"/>
							</group>
						</h1>
					</sheet>
				</form>
			</field>
		</record>

		<!-- paciente.examen search view -->
		<record id="examen_view_search" model="ir.ui.view">
			<field name="name">empleado.laboratorio.view.search</field>
			<field name="model">empleado.laboratorio</field>
			<field name="arch" type="xml">
				<search string="Busqueda de Empleados">
					<field name="nombreCompleto"/>
					<field name="cargo"/>
				</search>
			</field>
		</record>


	</data>
</odoo>
